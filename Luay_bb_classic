--[[
    luayV2 - LEVIATHAN FRAMEWORK
    ------------------------------------------------
    * Visual: Classic/Sharp Edge Industrial
    * Engine: Custom Interpolation & Touch Support
    * Persistence: Multi-Profile JSON System
    * Components: Slider (Ball-Handle), Toggle, Button, Dropdown, 
                 PlayerSelector, Keybind, Box, Logs, Area Subtitles,
                 Scroll-Sync, Custom Ripple, Notification Stack.
]]

local luayV2 = {}

-- [[ CORE SERVICES ]] --
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local HttpService = game:GetService("HttpService")
local players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local TextService = game:GetService("TextService")
local Debris = game:GetService("Debris")

-- [[ SETTINGS & GLOBALS ]] --
local plr = players.LocalPlayer
local mouse = plr:GetMouse()
local SAVE_FOLDER = "luay_leviathan/"
local CONFIG_EXT = ".json"

-- [[ ICONS ]] --
local ICON_MAP = {
    ["house"] = "rbxassetid://7072706663",
    ["settings"] = "rbxassetid://7072721682",
    ["user"] = "rbxassetid://7072724418",
    ["combat"] = "rbxassetid://7072882435",
    ["folder"] = "rbxassetid://7072706503",
    ["cloud"] = "rbxassetid://7072706148",
    ["mouse"] = "rbxassetid://7072717697",
    ["shield"] = "rbxassetid://7072720072",
    ["search"] = "rbxassetid://7072719455"
}

-- [[ UTILS & MATH ]] --
local function EnsureFolder()
    if not isfolder(SAVE_FOLDER) then makefolder(SAVE_FOLDER) end
end

local function GetXY(GuiObject)
	local Max, Min = GuiObject.AbsoluteSize.X, GuiObject.AbsolutePosition.X
	local Real = math.clamp(mouse.X, Min, Min + Max)
	return (Real - Min) / Max
end

local function Ripple(obj)
    obj.ClipsDescendants = true
    obj.MouseButton1Down:Connect(function()
        local ripple = Instance.new("Frame")
        ripple.Name = "RippleEffect"
        ripple.Parent = obj
        ripple.BackgroundColor3 = Color3.new(1, 1, 1)
        ripple.BackgroundTransparency = 0.7
        ripple.Size = UDim2.new(0, 0, 0, 0)
        ripple.Position = UDim2.new(0, mouse.X - obj.AbsolutePosition.X, 0, mouse.Y - obj.AbsolutePosition.Y)
        local corner = Instance.new("UICorner", ripple); corner.CornerRadius = UDim.new(1, 0)
        ripple:TweenSizeAndPosition(UDim2.new(0, 400, 0, 400), UDim2.new(0.5, -200, 0.5, -200), "Out", "Quad", 0.6)
        TweenService:Create(ripple, TweenInfo.new(0.6), {BackgroundTransparency = 1}):Play()
        Debris:AddItem(ripple, 0.6)
    end)
end

-- [[ DRAGGABLE SYSTEM ]] --
local function MakeDraggable(topbar, object)
    local dragging, dragStart, startPos
    topbar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true; dragStart = input.Position; startPos = object.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            object.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

-- [[ NOTIFICATION SYSTEM ]] --
local NotificationStack = {}
function luayV2:Notify(cfg)
    local nGui = CoreGui:FindFirstChild("Leviathan_Notify") or Instance.new("ScreenGui", CoreGui)
    nGui.Name = "Leviathan_Notify"
    
    local container = nGui:FindFirstChild("Stack") or Instance.new("Frame", nGui)
    if not nGui:FindFirstChild("Stack") then
        container.Name = "Stack"; container.Size = UDim2.new(0, 300, 1, 0); container.Position = UDim2.new(1, -310, 0, 0); container.BackgroundTransparency = 1
        local layout = Instance.new("UIListLayout", container); layout.VerticalAlignment = "Bottom"; layout.Padding = UDim.new(0, 10)
    end
    
    local frame = Instance.new("Frame", container)
    frame.Size = UDim2.new(1, 0, 0, 0); frame.BackgroundColor3 = Color3.fromRGB(15,15,15); frame.BorderSizePixel = 0; frame.ClipsDescendants = true
    
    local accent = Instance.new("Frame", frame)
    accent.Size = UDim2.new(0, 4, 1, 0); accent.BackgroundColor3 = cfg.Color or Color3.fromRGB(0, 170, 255); accent.BorderSizePixel = 0
    
    local title = Instance.new("TextLabel", frame)
    title.Text = cfg.Title:upper(); title.Size = UDim2.new(1, -20, 0, 25); title.Position = UDim2.new(0, 15, 0, 5)
    title.TextColor3 = Color3.new(1,1,1); title.Font = "Code"; title.TextSize = 14; title.TextXAlignment = "Left"; title.BackgroundTransparency = 1
    
    local msg = Instance.new("TextLabel", frame)
    msg.Text = cfg.Text; msg.Size = UDim2.new(1, -20, 1, -35); msg.Position = UDim2.new(0, 15, 0, 30)
    msg.TextColor3 = Color3.fromRGB(180,180,180); msg.Font = "Code"; msg.TextSize = 12; msg.TextXAlignment = "Left"; msg.TextYAlignment = "Top"; msg.BackgroundTransparency = 1; msg.TextWrapped = true
    
    TweenService:Create(frame, TweenInfo.new(0.4, Enum.EasingStyle.Quart), {Size = UDim2.new(1, 0, 0, 80)}):Play()
    task.delay(cfg.Duration or 5, function()
        TweenService:Create(frame, TweenInfo.new(0.4, Enum.EasingStyle.Quart), {Size = UDim2.new(1, 0, 0, 0)}):Play()
        task.wait(0.4); frame:Destroy()
    end)
end

-- [[ WINDOW OBJECT ]] --
function luayV2:Window(config)
    local Window = {
        MainColor = config.Color or Color3.fromRGB(0, 170, 255),
        Title = config.Name or "LEVIATHAN V2",
        Size = config.Size or UDim2.new(0, 450, 0, 500),
        Running = true,
        AutoSave = false,
        Profiles = {},
        CurrentConfig = "default",
        Data = {}
    }

    local ScreenGui = Instance.new("ScreenGui", CoreGui)
    ScreenGui.Name = "Leviathan_" .. HttpService:GenerateGUID(false); ScreenGui.ResetOnSpawn = false

    local Main = Instance.new("Frame", ScreenGui)
    Main.Size = Window.Size; Main.Position = UDim2.new(0.5, -Window.Size.X.Offset/2, 0.5, -Window.Size.Y.Offset/2)
    Main.BackgroundColor3 = Color3.fromRGB(10, 10, 10); Main.BorderSizePixel = 0; Main.ClipsDescendants = true

    -- [VISUAL ACCENTS] --
    local SidebarLine = Instance.new("Frame", Main)
    SidebarLine.Size = UDim2.new(0, 3, 1, 0); SidebarLine.BackgroundColor3 = Window.MainColor; SidebarLine.BorderSizePixel = 0; SidebarLine.ZIndex = 50

    local TopBar = Instance.new("Frame", Main)
    TopBar.Size = UDim2.new(1, 0, 0, 45); TopBar.BackgroundColor3 = Color3.fromRGB(18, 18, 18); TopBar.BorderSizePixel = 0
    
    local TopLine = Instance.new("Frame", Main)
    TopLine.Size = UDim2.new(1, 0, 0, 2); TopLine.Position = UDim2.new(0, 0, 0, 45)
    TopLine.BackgroundColor3 = Window.MainColor; TopLine.BorderSizePixel = 0; TopLine.ZIndex = 45

    -- [TITLE & SUBTITLE] --
    local Title = Instance.new("TextLabel", TopBar)
    Title.Text = "  " .. Window.Title:upper(); Title.Size = UDim2.new(1, -100, 0, 25); Title.Position = UDim2.new(0, 15, 0, 5)
    Title.TextColor3 = Color3.new(1, 1, 1); Title.Font = "Code"; Title.TextSize = 16; Title.TextXAlignment = "Left"; Title.BackgroundTransparency = 1

    local AreaLabel = Instance.new("TextLabel", TopBar)
    AreaLabel.Text = "  NO AREA SELECTED"; AreaLabel.Size = UDim2.new(1, -100, 0, 15); AreaLabel.Position = UDim2.new(0, 15, 0, 25)
    AreaLabel.TextColor3 = Window.MainColor; AreaLabel.Font = "Code"; AreaLabel.TextSize = 10; AreaLabel.TextXAlignment = "Left"; AreaLabel.BackgroundTransparency = 1

    -- [CONTROLS] --
    local Close = Instance.new("TextButton", TopBar)
    Close.Size = UDim2.new(0, 45, 0, 45); Close.Position = UDim2.new(1, -45, 0, 0); Close.Text = "×"
    Close.TextColor3 = Color3.fromRGB(255, 80, 80); Close.Font = "GothamBold"; Close.TextSize = 26; Close.BackgroundTransparency = 1

    local Minimize = Instance.new("TextButton", TopBar)
    Minimize.Size = UDim2.new(0, 45, 0, 45); Minimize.Position = UDim2.new(1, -90, 0, 0); Minimize.Text = "—"
    Minimize.TextColor3 = Color3.new(1,1,1); Minimize.Font = "GothamBold"; Minimize.TextSize = 20; Minimize.BackgroundTransparency = 1

    -- [DESTRUCTION PROGRESSIVE] --
    Close.MouseButton1Click:Connect(function()
        Window.Running = false
        local t1 = TweenService:Create(Main, TweenInfo.new(0.4, Enum.EasingStyle.Quart, Enum.EasingDirection.In), {Size = UDim2.new(0, Window.Size.X.Offset, 0, 47)})
        t1:Play(); t1.Completed:Wait()
        local t2 = TweenService:Create(Main, TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.In), {Size = UDim2.new(0, 0, 0, 47), Position = Main.Position + UDim2.new(0, Window.Size.X.Offset/2, 0, 0)})
        t2:Play(); t2.Completed:Wait()
        ScreenGui:Destroy()
    end)

    local isMinimized = false
    Minimize.MouseButton1Click:Connect(function()
        isMinimized = not isMinimized
        local target = isMinimized and UDim2.new(0, Window.Size.X.Offset, 0, 47) or Window.Size
        TweenService:Create(Main, TweenInfo.new(0.5, Enum.EasingStyle.Quart), {Size = target}):Play()
    end)

    MakeDraggable(TopBar, Main)

    -- [SIDEBAR] --
    local Sidebar = Instance.new("Frame", Main)
    Sidebar.Size = UDim2.new(0, 55, 1, -55); Sidebar.Position = UDim2.new(0, 8, 0, 55); Sidebar.BackgroundTransparency = 1
    local SideLayout = Instance.new("UIListLayout", Sidebar); SideLayout.Padding = UDim.new(0, 10); SideLayout.HorizontalAlignment = "Center"; SideLayout.SortOrder = "LayoutOrder"

    -- [CONTAINER] --
    local Container = Instance.new("Frame", Main)
    Container.Size = UDim2.new(1, -80, 1, -70); Container.Position = UDim2.new(0, 70, 0, 60); Container.BackgroundTransparency = 1; Container.ClipsDescendants = true

    -- [PERSISTENCE ENGINE] --
    function Window:Save(profile, silent)
        EnsureFolder()
        local json = HttpService:JSONEncode(Window.Data)
        writefile(SAVE_FOLDER .. (profile or Window.CurrentConfig) .. CONFIG_EXT, json)
        if not silent then luayV2:Notify({Title = "SISTEMA", Text = "Configurações salvas: " .. profile, Duration = 3}) end
    end

    function Window:Load(profile)
        local path = SAVE_FOLDER .. (profile or Window.CurrentConfig) .. CONFIG_EXT
        if isfile(path) then
            Window.Data = HttpService:JSONDecode(readfile(path))
            return true
        end
        return false
    end

    function Window:SetTheme(color)
        Window.MainColor = color
        SidebarLine.BackgroundColor3 = color; TopLine.BackgroundColor3 = color; AreaLabel.TextColor3 = color
        for _, tab in pairs(Container:GetChildren()) do if tab:IsA("ScrollingFrame") then tab.ScrollBarImageColor3 = color end end
        for _, icon in pairs(Sidebar:GetChildren()) do if icon:IsA("ImageButton") and icon:GetAttribute("Active") then icon.ImageColor3 = color end end
    end

    -- [[ AREA CREATION ]] --
    function Window:Area(name, icon)
        local AreaFrame = Instance.new("ScrollingFrame", Container)
        AreaFrame.Size = UDim2.new(1, 0, 1, 0); AreaFrame.BackgroundTransparency = 1; AreaFrame.Visible = false
        AreaFrame.ScrollBarThickness = 3; AreaFrame.ScrollBarImageColor3 = Window.MainColor; AreaFrame.AutomaticCanvasSize = "Y"; AreaFrame.BorderSizePixel = 0
        local AreaLayout = Instance.new("UIListLayout", AreaFrame); AreaLayout.Padding = UDim.new(0, 8); AreaLayout.SortOrder = "LayoutOrder"

        local TabBtn = Instance.new("ImageButton", Sidebar)
        TabBtn.Size = UDim2.new(0, 38, 0, 38); TabBtn.BackgroundColor3 = Color3.fromRGB(20, 20, 20); TabBtn.BorderSizePixel = 0
        TabBtn.Image = ICON_MAP[icon] or icon; TabBtn.ImageColor3 = Color3.fromRGB(150, 150, 150)
        TabBtn.LayoutOrder = #Sidebar:GetChildren()

        TabBtn.MouseButton1Click:Connect(function()
            for _, v in pairs(Container:GetChildren()) do if v:IsA("ScrollingFrame") then v.Visible = false end end
            for _, v in pairs(Sidebar:GetChildren()) do if v:IsA("ImageButton") then 
                v:SetAttribute("Active", false)
                TweenService:Create(v, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(20, 20, 20), ImageColor3 = Color3.fromRGB(150, 150, 150)}):Play()
            end end
            AreaFrame.Visible = true; TabBtn:SetAttribute("Active", true); AreaLabel.Text = "  " .. name:upper()
            TweenService:Create(TabBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(26, 26, 26), ImageColor3 = Window.MainColor}):Play()
        end)

        if not Window.CurrentTab then
            Window.CurrentTab = AreaFrame; AreaFrame.Visible = true; TabBtn:SetAttribute("Active", true); TabBtn.ImageColor3 = Window.MainColor; AreaLabel.Text = "  " .. name:upper()
        end

        local Elements = {}

        -- [COMP: BUTTON] --
        function Elements:Button(txt, cb)
            local b = Instance.new("TextButton", AreaFrame)
            b.Size = UDim2.new(0.98, 0, 0, 35); b.BackgroundColor3 = Color3.fromRGB(18, 18, 18); b.BorderSizePixel = 0
            b.Text = "  " .. txt:upper(); b.TextColor3 = Color3.new(1,1,1); b.Font = "Code"; b.TextSize = 13; b.TextXAlignment = "Left"
            Ripple(b); b.MouseButton1Click:Connect(function() if Window.Running then cb() end end)
            return b
        end

        -- [COMP: TOGGLE] --
        function Elements:Toggle(txt, default, cb)
            local state = Window.Data[txt] or default or false
            local t = Instance.new("TextButton", AreaFrame)
            t.Size = UDim2.new(0.98, 0, 0, 38); t.BackgroundColor3 = Color3.fromRGB(18, 18, 18); t.BorderSizePixel = 0
            t.Text = "  " .. txt; t.TextColor3 = state and Color3.new(1,1,1) or Color3.fromRGB(160, 160, 160)
            t.Font = "Code"; t.TextSize = 13; t.TextXAlignment = "Left"
            
            local indicator = Instance.new("Frame", t)
            indicator.Size = UDim2.new(0, 18, 0, 18); indicator.Position = UDim2.new(1, -28, 0.5, -9)
            indicator.BackgroundColor3 = state and Window.MainColor or Color3.fromRGB(40,40,40); indicator.BorderSizePixel = 0
            
            local function toggle(force)
                state = force ~= nil and force or not state
                Window.Data[txt] = state
                if Window.AutoSave then Window:Save(nil, true) end
                TweenService:Create(indicator, TweenInfo.new(0.2), {BackgroundColor3 = state and Window.MainColor or Color3.fromRGB(40,40,40)}):Play()
                t.TextColor3 = state and Color3.new(1,1,1) or Color3.fromRGB(160, 160, 160)
                cb(state)
            end
            t.MouseButton1Click:Connect(function() if Window.Running then toggle() end end)
            if state then task.spawn(cb, state) end
        end

        -- [COMP: SLIDER WITH BALL-HANDLE] --
        function Elements:Slider(txt, min, max, default, cb)
            local val = Window.Data[txt] or default or min
            local sF = Instance.new("Frame", AreaFrame)
            sF.Size = UDim2.new(0.98, 0, 0, 55); sF.BackgroundColor3 = Color3.fromRGB(18, 18, 18); sF.BorderSizePixel = 0
            
            local label = Instance.new("TextLabel", sF)
            label.Text = "  " .. txt .. ": " .. val; label.Size = UDim2.new(1, 0, 0, 30); label.BackgroundTransparency = 1
            label.TextColor3 = Color3.new(1,1,1); label.Font = "Code"; label.TextSize = 12; label.TextXAlignment = "Left"
            
            local track = Instance.new("Frame", sF)
            track.Size = UDim2.new(0.88, 0, 0, 4); track.Position = UDim2.new(0.06, 0, 0.75, 0); track.BackgroundColor3 = Color3.fromRGB(45,45,45); track.BorderSizePixel = 0
            
            local fill = Instance.new("Frame", track)
            fill.Size = UDim2.new((val-min)/(max-min), 0, 1, 0); fill.BackgroundColor3 = Window.MainColor; fill.BorderSizePixel = 0
            
            local ball = Instance.new("TextButton", fill)
            ball.AnchorPoint = Vector2.new(0.5, 0.5); ball.Size = UDim2.new(0, 16, 0, 16); ball.Position = UDim2.new(1, 0, 0.5, 0)
            ball.BackgroundColor3 = Window.MainColor; ball.BorderSizePixel = 0; ball.Text = ""
            
            local dragging = false
            local function update()
                local p = math.clamp((mouse.X - track.AbsolutePosition.X) / track.AbsoluteSize.X, 0, 1)
                local v = math.floor(min + (max-min)*p)
                fill.Size = UDim2.new(p, 0, 1, 0); label.Text = "  " .. txt .. ": " .. v
                Window.Data[txt] = v; if Window.AutoSave then Window:Save(nil, true) end
                cb(v)
            end
            
            ball.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then dragging = true end end)
            UserInputService.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then dragging = false end end)
            UserInputService.InputChanged:Connect(function(i) if dragging and (i.UserInputType == Enum.UserInputType.MouseMovement or i.UserInputType == Enum.UserInputType.Touch) then update() end end)
            track.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then update() end end)
            if val ~= default then task.spawn(cb, val) end
        end

        -- [COMP: DROPDOWN] --
        function Elements:Dropdown(txt, list, cb)
            local open = false
            local dF = Instance.new("Frame", AreaFrame)
            dF.Size = UDim2.new(0.98, 0, 0, 35); dF.BackgroundColor3 = Color3.fromRGB(18, 18, 18); dF.BorderSizePixel = 0; dF.ClipsDescendants = true
            
            local dBtn = Instance.new("TextButton", dF)
            dBtn.Size = UDim2.new(1, 0, 0, 35); dBtn.BackgroundTransparency = 1; dBtn.Text = "  " .. txt .. " [V]"; dBtn.TextColor3 = Color3.new(1,1,1); dBtn.Font = "Code"; dBtn.TextSize = 13; dBtn.TextXAlignment = "Left"
            
            local holder = Instance.new("Frame", dF)
            holder.Size = UDim2.new(1, 0, 0, #list * 32); holder.Position = UDim2.new(0, 0, 0, 35); holder.BackgroundTransparency = 1
            local hLayout = Instance.new("UIListLayout", holder)
            
            for _, val in pairs(list) do
                local item = Instance.new("TextButton", holder)
                item.Size = UDim2.new(1, 0, 0, 32); item.BackgroundColor3 = Color3.fromRGB(25,25,25); item.BorderSizePixel = 0
                item.Text = val; item.TextColor3 = Color3.fromRGB(200,200,200); item.Font = "Code"; item.TextSize = 12
                item.MouseButton1Click:Connect(function()
                    dBtn.Text = "  " .. txt .. " [" .. val .. "]"; open = false
                    TweenService:Create(dF, TweenInfo.new(0.3), {Size = UDim2.new(0.98, 0, 0, 35)}):Play()
                    cb(val)
                end)
            end
            
            dBtn.MouseButton1Click:Connect(function()
                open = not open
                TweenService:Create(dF, TweenInfo.new(0.3), {Size = open and UDim2.new(0.98, 0, 0, 35 + #list*32) or UDim2.new(0.98, 0, 0, 35)}):Play()
            end)
        end

        -- [COMP: BOX] --
        function Elements:Box(placeholder, cb)
            local bF = Instance.new("Frame", AreaFrame)
            bF.Size = UDim2.new(0.98, 0, 0, 38); bF.BackgroundColor3 = Color3.fromRGB(18, 18, 18); bF.BorderSizePixel = 0
            local tb = Instance.new("TextBox", bF)
            tb.Size = UDim2.new(1, -20, 1, 0); tb.Position = UDim2.new(0, 10, 0, 0); tb.BackgroundTransparency = 1
            tb.TextColor3 = Color3.new(1,1,1); tb.PlaceholderText = placeholder; tb.Font = "Code"; tb.TextSize = 13; tb.Text = ""; tb.TextXAlignment = "Left"
            tb.FocusLost:Connect(function() if Window.Running then cb(tb.Text) end end)
        end

        -- [COMP: KEYBIND] --
        function Elements:Keybind(txt, default, cb)
            local key = default; local waiting = false
            local b = self:Button(txt .. " [" .. key.Name .. "]", function() end)
            b.MouseButton1Click:Connect(function() waiting = true; b.Text = "  " .. txt .. " [...]" end)
            UserInputService.InputBegan:Connect(function(i)
                if waiting and i.UserInputType == Enum.UserInputType.Keyboard then
                    key = i.KeyCode; waiting = false; b.Text = "  " .. txt .. " [" .. key.Name .. "]"
                elseif not waiting and i.KeyCode == key then
                    cb()
                end
            end)
        end

        -- [COMP: PLAYER SELECTOR] --
        function Elements:PlayerSelector(txt, cb)
            local function getPlrs() local t = {}; for _,p in pairs(players:GetPlayers()) do table.insert(t, p.Name) end; return t end
            self:Dropdown(txt, getPlrs(), function(s) cb(players:FindFirstChild(s)) end)
        end

        -- [COMP: CONSOLE LOGS] --
        function Elements:Logs(h)
            local s = Instance.new("ScrollingFrame", AreaFrame)
            s.Size = UDim2.new(0.98, 0, 0, h or 150); s.BackgroundColor3 = Color3.new(0,0,0); s.BorderSizePixel = 0
            s.ScrollBarThickness = 3; s.ScrollBarImageColor3 = Window.MainColor; s.AutomaticCanvasSize = "Y"
            local l = Instance.new("UIListLayout", s)
            local lo = {}
            function lo:Log(m, c)
                local tx = Instance.new("TextLabel", s)
                tx.Size = UDim2.new(1, -10, 0, 20); tx.BackgroundTransparency = 1; tx.Text = " > " .. m
                tx.TextColor3 = c or Color3.new(1,1,1); tx.Font = "Code"; tx.TextSize = 11; tx.TextXAlignment = "Left"
                s.CanvasPosition = Vector2.new(0, 99999)
            end
            function lo:Clear() for _, v in pairs(s:GetChildren()) do if v:IsA("TextLabel") then v:Destroy() end end end
            return lo
        end

        return Elements
    end
    return Window
end

return luayV2
--fim
